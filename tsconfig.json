{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./src"
    },
    
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}